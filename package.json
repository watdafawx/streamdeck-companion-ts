{
  "name": "streamdeck-companion-client",
  "version": "1.0.0",
  "description": "A comprehensive TypeScript client for StreamDeck Companion HTTP API with optional TCP/UDP support",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "REMOTE_CONTROL.md",
    "CHANGELOG.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "ARCHITECTURE.md"
  ],
  "scripts": {
    "build": "bun run build:clean && bun run build:esm && bun run build:cjs && bun run build:types",
    "build:clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "build:esm": "bun build src/index.ts --outfile=dist/index.js --format=esm --target=node",
    "build:cjs": "bun build src/index.ts --outfile=dist/index.cjs --format=cjs --target=node",
    "build:types": "tsc",
    "prepublishOnly": "bun run build",
    "test": "bun test",
    "dev": "bun run src/index.ts",
    "example": "bun run examples/basic-usage.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "streamdeck",
    "companion",
    "typescript",
    "api-client",
    "tcp",
    "udp",
    "http",
    "automation",
    "streaming",
    "obs",
    "broadcast"
  ],
  "author": "StreamDeck Module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/watdafawx/streamdeck-companion-client.git"
  },
  "bugs": {
    "url": "https://github.com/watdafawx/streamdeck-companion-client/issues"
  },
  "homepage": "https://github.com/watdafawx/streamdeck-companion-client#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
